{
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts **/*.js",
    "dev": "deno run --watch main.ts",
    "test": "rm -rf coverage && deno test -A --unstable --coverage=coverage && deno coverage coverage --lcov --output=coverage/lcov.info --exclude='test/**/*' && genhtml -o coverage/html --ignore-errors unmapped coverage/lcov.info > /dev/null",
    "ci": "deno test --unstable -A --coverage=coverage && deno coverage coverage --lcov --output=coverage/lcov.info",
    "update": "deno run -A https://deno.land/x/udd/main.ts deno.jsonc --dry-run",
    "docs": "deno doc --html --name=AdventOfCode2023 counter.ts ocr.ts  sequence.ts  utils.ts"
  },
  "imports": {
    "$jar": "https://deno.land/x/another_cookiejar@v5.0.3/mod.ts",
    "$curlcookie": "https://esm.sh/curlcookie@0.0.5",
    "$peggy": "https://esm.sh/peggy@3.0.2",
    "$std/": "https://deno.land/std@0.207.0/"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": ["woords/phdef.js", "docs"]
  },
  "lint": {
    "exclude": ["woords/phdef.js", "docs"],
    "rules": {
      "tags": ["fresh", "recommended"],
      "exclude": ["no-await-in-loop"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal"
      ]
    }
  },
  "lock": false
}
